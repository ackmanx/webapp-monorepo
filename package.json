{
    "name": "webapp-monorepo",
    "__NOTES": "This package file is for the server application and global build tooling. Each app will have its own for FE building",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "clean": "rm -rf public",
        "heroku-postbuild": "yarn --cwd apps/pinyin; yarn --cwd apps/pinyin build",
        "prettier": "prettier --config ./prettier.config.js --write './**/*.{js,json}'",
        "start": "node bin/www.js",
        "pinyin:build": "yarn --cwd apps/pinyin build"
    },
    "dependencies": {
        "compression": "1.7.4",
        "cookie-parser": "1.4.5",
        "debug": "4.1.1",
        "ejs": "3.1.3",
        "express": "4.17.1",
        "http-errors": "1.8.0",
        "lowdb": "1.0.0",
        "morgan": "1.10.0",
        "node-fetch": "2.6.0",
        "querystring": "0.2.0",
        "uuid": "8.2.0"
    },
    "devDependencies": {
        "prettier": "2.0.5"
    }
}
